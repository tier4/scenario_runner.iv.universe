<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- Essential parameters -->
  <arg name="map_path" description="point cloud and lanelet2 map directory path"/>
  <arg name="vehicle_model" default="jpntaxi" />
  <arg name="sensor_model" default="aip_xx1" />
  <arg name ="vehicle_id" value="$(optenv VEHICLE_ID default)" />
  <!-- Optional parameters -->
  <arg name="rviz" default="true" description="launch rviz"/>
  <arg name="initial_engage_state" default="false" />
  <arg name="use_object_recognition" default="true" />

  <!-- Vehicle Description -->
  <group>
    <include file="$(find-pkg-share vehicle_launch)/launch/vehicle_description.launch.xml">
      <arg name="vehicle_model" value="$(var vehicle_model)"/>
      <arg name="sensor_model" value="$(var sensor_model)"/>
      <arg name="vehicle_id" value="$(var vehicle_id)" />
    </include>
  </group>

  <!-- Simulation -->
  <group>
    <include file="$(find-pkg-share simple_planning_simulator)/launch/simple_planning_simulator.launch.xml">
      <arg name="initial_engage_state" value="$(var initial_engage_state)" />
    </include>
  </group>

  <!-- System -->
  <group>
    <include file="$(find-pkg-share system_launch)/launch/system.launch.xml">
      <arg name="run_mode" value="planning_simulation"/>
    </include>
  </group>

  <!-- Map -->
  <group>
    <include file="$(find-pkg-share map_launch)/launch/map.launch.xml">
      <arg name="map_path" value="$(var map_path)"/>
    </include>
  </group>

  <!-- Dummy Perception -->
  <group>
    <include file="$(find-pkg-share npc_simulator)/launch/npc_simulator.launch.xml">
      <arg name="initial_engage_state" value="$(var initial_engage_state)" />
    </include>
  </group>
  <group>
    <include file="$(find-pkg-share dummy_perception_publisher)/launch/dummy_perception_publisher.launch.xml">
      <arg name="real" value="false" />
      <arg name="visible_range" value="1000" />
      <arg name="use_object_recognition" value="$(var use_object_recognition)" />
    </include>
  </group>

  <!-- Planning -->
  <group>
    <include file="$(find-pkg-share planning_launch)/launch/planning.launch.xml" />
  </group>

  <!-- Control -->
  <group>
    <include file="$(find-pkg-share control_launch)/launch/control.launch.xml">
      <arg name="lateral_controller_mode" value="mpc_follower" description="options: mpc_follower, pure_pursuit"/>
    </include>
  </group>

  <!-- Rviz -->
  <node pkg="rviz" exec="rviz" name="rviz" output="screen" args="-d $(find-pkg-share scenario_api)/rviz/planning_simulator.rviz" if="$(var rviz)" />

  <!-- Web Controller -->
  <group>
    <include file="$(find-pkg-share roswww)/launch/roswww.launch.xml">
      <arg name="cached" value="false"/>
    </include>
    <include file="$(find-pkg-share rosbridge_server)/launch/rosbridge_websocket.launch.xml" />
  </group>

</launch>
